{
  "compilerOptions": {
    "outDir": "./public/",      // 编译后生成的文件目录
    "declaration": true,          // 生成 `.d.ts` 文件
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["es6", "dom", "dom.iterable", "scripthost", "es7", "es2015"],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
